pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/test1webapp/aws.git']]])
            }
        }
        stage('Build') {
            steps {
                git branch: 'main', url: 'https://github.com/test1webapp/aws.git'
                sh "zip sg.zip test_copy_program.py"
            }
        }
        stage('Push'){
            steps{
                sh "/usr/local/bin/aws s3 cp sg.zip s3://testjenkins2021"
                }
            }
       stage('Deploy'){
           steps{
               sh "/usr/local/bin/aws lambda create-function --function-name sg --runtime python2.7 --code S3Bucket=testjenkins2021,S3Key=sg.zip --handler sg.lambda_handler --role arn:aws:iam::850752531886:role/lambda_fullaccess --region us-east-1"
           }
       }
    }
}
